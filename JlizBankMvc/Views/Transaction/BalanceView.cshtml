@model JlizBankMvc.Models.RegisterViewModel;
@{
    ViewData["Title"] = "BalanceView";
}

<style>
            .form-group{
         text-align:center;
         margin:1% 25% 0 25%;
        border-radius:20px;
        background-color:white;
        width:50%;
        box-shadow:0px 0px 5px;
    }

    h2{
        text-align:center;
        color:#3D7878;
        font-size:50px;
        font-weight:bold;
        font-family: Fondamento, cursive;
    }

        .MyBtn{
        border-radius:30px;
        width:40%;
        height:50%;
       white-space: normal;
        margin:2%;
        background-color:#00FFFF;
        box-shadow:2px 2px 4px;
    }
        .MyBtn:hover{
        background-color:#00E3E3;
    }
          label{
        font-size:20px;
        font-weight:300;
         font-family: Itim, cursive;
    }
        input,label,a,p{
        font-family: Itim, cursive;
    }

        p{
        background-color:#1AFD9C;
        border-radius:5px;
        margin:auto;
        width:45%;
        box-shadow:2px 2px 5px;
        padding-left:5%;
    }
</style>

<h2>My Balance (NTD)</h2>

<form class="form-group" method="post"  asp-controller="Transaction" asp-action="ShowTransactionDetails" >
    <label>Account Balance: </label>
    
    <p>
        @Model.AccountBalance   NTD
    </p>

    <p></p>
    <input type="submit" value="View my transaction details" class="MyBtn"  >

</form>